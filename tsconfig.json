{
  "compilerOptions": {
    "strict": true,
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "Node",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client"],
    "jsx": "react",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "paths": {
      "@fullkit/client/custom-elements": ["../packages/client/dist/customElements.d.ts"],
      "@fullkit/client/reactivity": ["../packages/client/dist/reactivity.d.ts"],
      "@fullkit/client/renderer": ["../packages/client/dist/renderer.d.ts"]
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "esm": true,
    "compilerOptions": {
      "moduleResolution": "Node16"
    }
  }
}
